{
	"linters": {
		"disable-all": true,
		"enable": [
			"govet",
			"revive",
			"goimports",
			"misspell",
			"ineffassign",
			"gofmt"
		]
	},
	"run": {
		 "exclude-dirs": [
			"build",
			"hack",
			"manifests",
			"package",
			"scripts"
		],
		"exclude-files": [
			"/zz_generated_"
		],
		"deadline": "5m"
	},
	"issues": {
		"exclude-rules": [
			{
				"linters": "typecheck",
				"text": "imported but not used"
			},
			{
				"linters": "revive",
				"text": "should have comment"
			},
			{
				"linters": "revive",
				"text": "unused-parameter"
			},
			{
				"path": "_test\\.go$",
				"text": "dot-imports: should not use dot imports"
			}
		]
	}
}
